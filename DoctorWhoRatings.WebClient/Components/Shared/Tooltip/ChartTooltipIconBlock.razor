<div class="icon-block">
    <img class="icon @(IconSize.ToString().ToLower())" src="@IconUrl" alt="@IconAlt" />
    <div class="content">
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </div>
</div>

@code {
    [Parameter]
    public string? IconUrl { get; set; }

    [Parameter]
    public string? IconAlt { get; set; }

    [Parameter]
    public IconSize IconSize { get; set; } = IconSize.Regular;


    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
