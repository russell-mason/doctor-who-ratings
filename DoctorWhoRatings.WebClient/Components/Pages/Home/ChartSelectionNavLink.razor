<NavLink href="@Url" Match="NavLinkMatch.All">
    <div class="chart-link">
        <div class="chart-link-header">
            <div class="inner-text">
                <img class="chart-link-icon" src="@IconUrl" alt="Chart"/>
                <div class="chart-link-title">@Title</div>
            </div>
        </div>
        <div class="chart-link-description">
            <div class="inner-text">@Description</div>
        </div>
    </div>
</NavLink>

@code {
    [Parameter]
    public string Url { get; set; } = string.Empty;

    [Parameter]
    public string IconUrl { get; set; } = string.Empty;

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Description { get; set; } = string.Empty;
}
